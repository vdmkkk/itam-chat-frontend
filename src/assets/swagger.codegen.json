{
  "openapi": "3.0.0",
  "info": {
    "title": "ITAM Chat Backend",
    "description": "Backend for a messenger app. Provides JWT auth, user search, chats with previews, chat contents with pagination, and real-time messaging via WebSockets.",
    "version": "0.1.0"
  },
  "paths": {
    "/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user",
        "description": "Create a new user account with unique email and username.",
        "operationId": "register_register_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserCreate" }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/UserPublic" }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login and receive a JWT",
        "description": "Authenticate with username or email and password. Returns a Bearer JWT. In DEV mode tokens have no expiration; in production they expire after the configured TTL.",
        "operationId": "login_login_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginRequest" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Token" }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    },
    "/token": {
      "post": {
        "tags": ["Auth"],
        "summary": "OAuth2 Password Grant (Swagger Authorize)",
        "description": "Use this endpoint for Swagger's Authorize flow. Provide username (or email) and password. Returns a Bearer JWT.",
        "operationId": "login_token_token_post",
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/Body_login_token_token_post"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Token" }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    },
    "/search": {
      "get": {
        "tags": ["Search"],
        "summary": "Search users",
        "description": "Fast user search across username, first_name, and last_name. Matches are case-insensitive and prioritize exact/prefix username matches.",
        "operationId": "search_users_search_get",
        "security": [{ "OAuth2PasswordBearer": [] }],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100,
              "description": "Query string",
              "title": "Q"
            },
            "description": "Query string"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "maximum": 100,
              "minimum": 1,
              "default": 20,
              "title": "Limit"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0,
              "title": "Offset"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Page_UserSearchPublic_"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    },
    "/chats": {
      "get": {
        "tags": ["Chats"],
        "summary": "List chats for current user",
        "description": "Returns chat previews with last message. Supports pagination.",
        "operationId": "list_chats_chats_get",
        "security": [{ "OAuth2PasswordBearer": [] }],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "maximum": 100,
              "minimum": 1,
              "default": 20,
              "title": "Limit"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0,
              "title": "Offset"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Page_ChatPreview_" }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Chats"],
        "summary": "Create a chat (direct or group)",
        "description": "Create a direct chat with another user or a group chat when providing 2+ other users or a name.",
        "operationId": "create_chat_chats_post",
        "security": [{ "OAuth2PasswordBearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ChatCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ChatDetail" }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    },
    "/chats/{chat_id}": {
      "get": {
        "tags": ["Chats"],
        "summary": "Get chat details and messages",
        "description": "Returns chat details and paginated messages (newest first).",
        "operationId": "get_chat_chats__chat_id__get",
        "security": [{ "OAuth2PasswordBearer": [] }],
        "parameters": [
          {
            "name": "chat_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid", "title": "Chat Id" }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "maximum": 100,
              "minimum": 1,
              "default": 20,
              "title": "Limit"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0,
              "title": "Offset"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ChatWithMessagesPage"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    },
    "/chats/{chat_id}/messages": {
      "post": {
        "tags": ["Chats"],
        "summary": "Send a message (REST)",
        "description": "Send a text or image message to a chat; primarily for fallback to WS.",
        "operationId": "send_message_rest_chats__chat_id__messages_post",
        "security": [{ "OAuth2PasswordBearer": [] }],
        "parameters": [
          {
            "name": "chat_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid", "title": "Chat Id" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MessageCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MessageOut" }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Health check",
        "operationId": "health_health_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "title": "Response Health Health Get"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Body_login_token_token_post": {
        "properties": {
          "grant_type": {
            "anyOf": [
              { "type": "string", "pattern": "password" },
              { "type": "null" }
            ],
            "title": "Grant Type"
          },
          "username": { "type": "string", "title": "Username" },
          "password": { "type": "string", "title": "Password" },
          "scope": { "type": "string", "title": "Scope", "default": "" },
          "client_id": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Client Id"
          },
          "client_secret": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Client Secret"
          }
        },
        "type": "object",
        "required": ["username", "password"],
        "title": "Body_login_token_token_post"
      },
      "ChatCreate": {
        "properties": {
          "user_ids": {
            "items": { "type": "string", "format": "uuid" },
            "type": "array",
            "title": "User Ids"
          },
          "name": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Name"
          },
          "avatar": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Avatar"
          }
        },
        "type": "object",
        "required": ["user_ids"],
        "title": "ChatCreate"
      },
      "ChatDetail": {
        "properties": {
          "id": { "type": "string", "format": "uuid", "title": "Id" },
          "is_group": { "type": "boolean", "title": "Is Group" },
          "name": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Name"
          },
          "avatar": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Avatar"
          },
          "users": {
            "items": { "$ref": "#/components/schemas/UserPublic" },
            "type": "array",
            "title": "Users"
          }
        },
        "type": "object",
        "required": ["id", "is_group", "users"],
        "title": "ChatDetail"
      },
      "ChatPreview": {
        "properties": {
          "id": { "type": "string", "format": "uuid", "title": "Id" },
          "name": { "type": "string", "title": "Name" },
          "avatar": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Avatar"
          },
          "is_group": { "type": "boolean", "title": "Is Group" },
          "last_message": {
            "anyOf": [
              { "$ref": "#/components/schemas/LastMessagePreview" },
              { "type": "null" }
            ]
          }
        },
        "type": "object",
        "required": ["id", "name", "is_group"],
        "title": "ChatPreview"
      },
      "ChatWithMessagesPage": {
        "properties": {
          "chat": { "$ref": "#/components/schemas/ChatDetail" },
          "messages": {
            "items": { "$ref": "#/components/schemas/MessageOut" },
            "type": "array",
            "title": "Messages"
          },
          "total": { "type": "integer", "title": "Total" },
          "limit": { "type": "integer", "title": "Limit" },
          "offset": { "type": "integer", "title": "Offset" }
        },
        "type": "object",
        "required": ["chat", "messages", "total", "limit", "offset"],
        "title": "ChatWithMessagesPage"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": { "$ref": "#/components/schemas/ValidationError" },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "LastMessagePreview": {
        "properties": {
          "id": { "type": "string", "format": "uuid", "title": "Id" },
          "from_user_id": {
            "type": "string",
            "format": "uuid",
            "title": "From User Id"
          },
          "text_content": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Text Content"
          },
          "image_content": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Image Content"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "title": "Created At"
          }
        },
        "type": "object",
        "required": ["id", "from_user_id", "created_at"],
        "title": "LastMessagePreview"
      },
      "LoginRequest": {
        "properties": {
          "username_or_email": {
            "type": "string",
            "title": "Username Or Email",
            "example": "jane@example.com"
          },
          "password": {
            "type": "string",
            "title": "Password",
            "example": "StrongPassword123!"
          }
        },
        "type": "object",
        "required": ["username_or_email", "password"],
        "title": "LoginRequest"
      },
      "MessageCreate": {
        "properties": {
          "text_content": {
            "anyOf": [
              { "type": "string", "maxLength": 4000 },
              { "type": "null" }
            ],
            "title": "Text Content",
            "example": "Hello!"
          },
          "image_content": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Image Content",
            "example": "https://example.com/image.png"
          }
        },
        "type": "object",
        "title": "MessageCreate"
      },
      "MessageOut": {
        "properties": {
          "id": { "type": "string", "format": "uuid", "title": "Id" },
          "chat_id": { "type": "string", "format": "uuid", "title": "Chat Id" },
          "from_user_id": {
            "type": "string",
            "format": "uuid",
            "title": "From User Id"
          },
          "text_content": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Text Content"
          },
          "image_content": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Image Content"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "title": "Created At"
          },
          "seen_by": {
            "items": { "$ref": "#/components/schemas/MessageSeenOut" },
            "type": "array",
            "title": "Seen By"
          }
        },
        "type": "object",
        "required": ["id", "chat_id", "from_user_id", "created_at"],
        "title": "MessageOut"
      },
      "MessageSeenOut": {
        "properties": {
          "user_id": {
            "type": "string",
            "format": "uuid",
            "title": "User Id",
            "description": "User who has seen the message"
          },
          "seen_at": {
            "type": "string",
            "format": "date-time",
            "title": "Seen At"
          }
        },
        "type": "object",
        "required": ["user_id", "seen_at"],
        "title": "MessageSeenOut"
      },
      "Page_ChatPreview_": {
        "properties": {
          "items": {
            "items": { "$ref": "#/components/schemas/ChatPreview" },
            "type": "array",
            "title": "Items"
          },
          "total": { "type": "integer", "minimum": 0.0, "title": "Total" },
          "limit": { "type": "integer", "minimum": 1.0, "title": "Limit" },
          "offset": { "type": "integer", "minimum": 0.0, "title": "Offset" }
        },
        "type": "object",
        "required": ["items", "total", "limit", "offset"],
        "title": "Page[ChatPreview]"
      },
      "Page_UserSearchPublic_": {
        "properties": {
          "items": {
            "items": { "$ref": "#/components/schemas/UserSearchPublic" },
            "type": "array",
            "title": "Items"
          },
          "total": { "type": "integer", "minimum": 0.0, "title": "Total" },
          "limit": { "type": "integer", "minimum": 1.0, "title": "Limit" },
          "offset": { "type": "integer", "minimum": 0.0, "title": "Offset" }
        },
        "type": "object",
        "required": ["items", "total", "limit", "offset"],
        "title": "Page[UserSearchPublic]"
      },
      "Token": {
        "properties": {
          "access_token": { "type": "string", "title": "Access Token" },
          "token_type": {
            "type": "string",
            "title": "Token Type",
            "default": "bearer"
          }
        },
        "type": "object",
        "required": ["access_token"],
        "title": "Token"
      },
      "UserCreate": {
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "title": "Email",
            "example": "jane@example.com"
          },
          "username": {
            "type": "string",
            "maxLength": 50,
            "minLength": 3,
            "title": "Username",
            "example": "jane_doe"
          },
          "password": {
            "type": "string",
            "maxLength": 256,
            "minLength": 8,
            "title": "Password",
            "example": "StrongPassword123!"
          },
          "first_name": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "First Name",
            "example": "Jane"
          },
          "last_name": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Last Name",
            "example": "Doe"
          },
          "avatar": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Avatar",
            "example": "https://example.com/avatar.jpg"
          }
        },
        "type": "object",
        "required": ["email", "username", "password"],
        "title": "UserCreate"
      },
      "UserPublic": {
        "properties": {
          "id": { "type": "string", "format": "uuid", "title": "Id" },
          "email": { "type": "string", "format": "email", "title": "Email" },
          "username": { "type": "string", "title": "Username" },
          "first_name": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "First Name"
          },
          "last_name": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Last Name"
          },
          "avatar": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Avatar"
          },
          "last_seen": {
            "anyOf": [
              { "type": "string", "format": "date-time" },
              { "type": "null" }
            ],
            "title": "Last Seen"
          }
        },
        "type": "object",
        "required": ["id", "email", "username"],
        "title": "UserPublic"
      },
      "UserSearchPublic": {
        "properties": {
          "id": { "type": "string", "format": "uuid", "title": "Id" },
          "username": { "type": "string", "title": "Username" },
          "first_name": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "First Name"
          },
          "last_name": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Last Name"
          },
          "avatar": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Avatar"
          }
        },
        "type": "object",
        "required": ["id", "username"],
        "title": "UserSearchPublic"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": { "anyOf": [{ "type": "string" }, { "type": "integer" }] },
            "type": "array",
            "title": "Location"
          },
          "msg": { "type": "string", "title": "Message" },
          "type": { "type": "string", "title": "Error Type" }
        },
        "type": "object",
        "required": ["loc", "msg", "type"],
        "title": "ValidationError"
      }
    },
    "securitySchemes": {
      "OAuth2PasswordBearer": {
        "type": "oauth2",
        "flows": { "password": { "scopes": {}, "tokenUrl": "/token" } }
      }
    }
  }
}
